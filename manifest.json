{
    "manifest_version": 2,
    "name": "Random image generator",
    "description": "Delivers a random image on each click - uses thecatapi.com",
    "version": "1.0",
    "background": {
        "scripts": ["tab.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Generate image"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "clipboardWrite",
        "webRequest",
        "notifications",
        "http://www.thecatapi.com/"
    ]
}
